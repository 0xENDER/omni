// This file allows you to customize various aspects of VS Code's behavior, such as the editor's
// appearance, code formatting, and language-specific settings.
{
    // Tabs
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    // Auto-formatting
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    // Max line length
    "editor.wordWrap": "on",
    "editor.rulers": [80, 100, 120],
    "[omniarium]": {
        "editor.wordWrapColumn": 120,
    },
    // Explorer settings
    "files.exclude": {
        "**/.git/**": true,
        "**/.vscode/**": true,
        "**/.omni.out/core/**": true,
        "**.omni.cache": true,
        "**.omni.lyr.cache": true
    },
    // File associations
    "files.associations": {
        "*.omni.manifest": "jsonc",
        "*.omni.loc": "jsonc",
        "*.omni.ini": "ini",
        "*.omni.lyr": "omniarium-markdown",
        "*.omni": "omniarium"
    }
}