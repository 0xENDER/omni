{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Omniarium Layer | Standard Edition 0.1",
  "scopeName": "source.omniarium.layer",
  "patterns": [
    {
      "include": "#root-order"
    }
  ],
  "repository": {
    "root-order": {
      "patterns": [
        {
          "include": "#comments"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "match": "//.*",
          "name": "comment.line.double-slash.omniarium"
        },
        {
          "match": "/\\*\\*.*\\*/",
          "name": "comment.block.documentation.omniarium"
        }
      ]
    }
  }
}
