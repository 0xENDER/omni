// This file allows you to customize various aspects of VS Code's behavior, such as the editor's
// appearance, code formatting, and language-specific settings.
{
    // Tabs
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    // Auto-formatting
    "editor.formatOnSave": false, // Temporary! (will be replaced when omni's VSCode extension is prepared)
    "editor.formatOnType": false, // Temporary!
    // Max line length
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [80, 100, 120],
    "[markdown]": {
        "editor.wordWrapColumn": 80,
    },
    // Explorer settings
    "files.exclude": {
        "**/dist/**": true,
        "**/.git/**": true,
        "**/node_modules/**": true,
        "**/.vscode/**": false, // Change this later
        "**/.omni.out/core/**": false, // Change this later
        "**.omni.cache": false // Change this later
    },
    // File associations
    "files.associations": {
        "*.omni.manifest": "jsonc",
        "*.omni.local": "jsonc",
        "*.omni.ini": "ini",
        "*.omni.layer": "omniarium-markdown",
        "*.omni": "omniarium",
        "*html": "html",
        "*.html": "html",
        "*.wsb": "xml",
        "*.omni.loc": "jsonc",
        "*.omni.lyr": "omniarium-markdown",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "chrono": "cpp",
        "clocale": "cpp",
