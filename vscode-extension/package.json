{
    "name": "omniarium",
    "main": "scripts/extension.js",
    "displayName": "Omniarium",
    "description": "All you need to start working with the Omniarium programming language!",
    "version": "0.0.2",
    "icon": "icons/plain.png",
    "engines": {
        "vscode": ">=1.93.0"
    },
    "publisher": "0xENDER",
    "contributes": {
        "languages": [
            {
                "id": "omniarium",
                "aliases": [
                    "Omniarium",
                    "Omni"
                ],
                "extensions": [
                    ".omni"
                ],
                "icon": {
                    "light": "icons/light.png",
                    "dark": "icons/dark.png"
                },
                "formatter": {
                    "scheme": "file",
                    "language": "omniarium"
                }
            },
            {
                "id": "omniarium-markdown",
                "aliases": [
                    "Omniarium Markdown",
                    "Omni Markdown",
                    "Omni MD",
                    "Omni Lyr"
                ],
                "extensions": [
                    ".omni.lyr"
                ],
                "icon": {
                    "light": "icons/markdown/light.png",
                    "dark": "icons/markdown/dark.png"
                },
                "formatter": {
                    "scheme": "file",
                    "language": "omniarium-markdown"
                }
            },
            {
                "id": "omniarium-regexp",
                "aliases": [
                    "Omniarium Regex",
                    "Omni Regex"
                ]
            },
            {
                "id": "jsonc",
                "extensions": [".omni.manifest", ".omni.local"]
            },
            {
                "id": "ini",
                "extensions": [".omni.ini"]
            }
        ],
        "grammars": [
            {
                "language": "omniarium",
                "scopeName": "source.omniarium",
                "path": "./syntaxes/omniarium.tmLanguage.json"
            },
            {
                "language": "omniarium-markdown",
                "scopeName": "source.omniarium.markdown",
                "path": "./syntaxes/omniarium.markdown.tmLanguage.json"
            },
            {
                "language": "omniarium-regexp",
                "scopeName": "source.omniarium.regexp",
                "path": "./syntaxes/omniarium.regexp.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "omniarium",
                "path": "./snippets/omniarium.code-snippets.json"
            },
            {
                "language": "omniarium-markdown",
                "path": "./snippets/omniarium.markdown.code-snippets.json"
            }
        ],
        "commands": [
            {
                "command": "omniarium.msg",
                "title": "Show a test Omniarium Hello Message!",
                "category": "Omniarium"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:omniarium",
        "workspaceContains:**/.omni.manifest",
        "workspaceContains:**/.omni.ini",
        "workspaceContains:**/.omni.lyr",
        "workspaceContains:**/*.omni"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Ender-ing/omni.git"
    },
    "scripts": {
        "build": "tsc",
        "copy-license": "if [ \"$OSTYPE\" == \"linux-gnu\" ]; then cp ../LICENSE* .; else copy ../LICENSE* .; fi",
        "delete-license": "if [ \"$OSTYPE\" == \"linux-gnu\" ]; then rm LICENSE* .; else del LICENSE*; fi",
        "package": "npm run delete-license && npm run copy-license && tsc && ../ && vsce package && npm run delete-license"
    },
    "devDependencies": {
        "@types/vscode": "^1.93.0",
        "vscode": "^1.1.34"
    }
}
